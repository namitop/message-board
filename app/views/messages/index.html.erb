
<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <label for="message_name" class="col-sm-1 control-label">名前</label>
    <div class="col-sm-11">
      <%= f.text_field :name, class: "text form-control" %> 
    </div>
  </div>
  <div class="form-group">
    <label for="message_body" class="col-sm-1 control-label">内容</label>
    <div class="col-sm-11">
      <%= f.text_area :body, class: "text form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-6">
    <%= f.submit class: "btn btn-sm btn-info btn-block"%>
    </div>
  </div>
<% end %>

<br />
<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  
  <div class="panel-body">
    <% @messages.reverse_each do |message| %>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <%= message.name %>
        </div>
        <div class="panel-body">
          "<%= message.body %>"
        </div>
      </div>
      <br>
    <% end %>
  </div>
</div>

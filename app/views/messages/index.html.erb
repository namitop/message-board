<%= render 'form' %>

<br />
<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  
  <div class="panel-body">
    <% @messages.reverse_each do |message| %>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <%= message.name %>
        </div>
        <div class="panel-body">
          "<%= message.body %>"
        </div>
      </div>
      <br>
    <% end %>
  </div>
</div>
